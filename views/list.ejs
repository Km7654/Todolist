                    </form>
                </div>
                <% }) %>


                    <form class="formclass" action="/" method="post">
                        <input type="text" placeholder="Enter your task here" name="newitem" id="inp1" required autocomplete="off">
                        <button type="submit" name="list" value=<%= listtitle %>>Add</button>
                    </form>
        </div>

    </div>

