

<%- include("header") -%>


    <div class="box">
        <div class="heading">
            <h1>
                <%= listtitle %>
            </h1>
        </div>

        <div class="main">

            <% newlistitems.forEach(function(element){ %>
                <div class="content">
                    
                    <p>
                        <%= element.name %>
                    </p>
                    <form action="/rm" method="post">
                        <input type="hidden" value="<%= element.name %>" name="deleteelement">
